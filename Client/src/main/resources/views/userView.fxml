      <Button fx:id="buttonSendAnswers" layoutX="217.0" layoutY="307.0" mnemonicParsing="false" onAction="#sendAnswers" prefHeight="49.0" prefWidth="108.0" text="Send answers" />
      <TextField fx:id="textboxCity" layoutX="197.0" layoutY="214.0" />
      <TextField fx:id="textboxSea" layoutX="197.0" layoutY="261.0" />
   </children>
</AnchorPane>
